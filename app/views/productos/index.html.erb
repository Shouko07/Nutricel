<section class="py-5">
<h1 class="display-6 fw-bold pb-md-4">Lista de productos</h1>
<table class="table table-striped table-hover ">
  <thead class="table-dark">
    <tr>
      <th scope="col">ID del producto</th>
      <th scope="col">Nombre</th>
      <th scope="col">Precio (MXN)</th>
      <th scope="col">Peso (gr)</th>
      <th> </th>
      <th> </th>
      <th> </th>
    </tr>
  </thead>
  <tbody>
    <% @productos.each do |producto| %>
      <tr>
        <td><%= producto.producto_id %></td>
        <td><%= producto.nombre %></td>
        <td><%= producto.precio %></td>
        <td><%= producto.peso %></td>
        <td>
        <%= link_to "Comprar", new_pedido_path(producto_id: producto.id), class: "btn btn-secondary" %>
      </td>
              <td><%= link_to "Mostrar", producto, class: "btn btn-dark" %></td>
        <td><%= button_to "Eliminar", producto, method: :delete, form: { data: { turbo_confirm: 'Â¿Estas seguro?' } }, class: "btn btn-danger" %></td>
      </tr>
      <% end %>
  </tbody>
</table>

<%= link_to "Nuevo producto", new_producto_path, class: "btn btn-secondary btn-lg" %>
</section>