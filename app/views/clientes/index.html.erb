<h1>Lista de clientes</h1>

<table class="table table-striped table-hover ">
  <thead class="table-dark">
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Correo</th>
      <th scope="col">Teléfono</th>
      <th scope="col">Calle</th>
      <th scope="col">Colonia</th>
      <th scope="col">Código Postal</th>
      <th scope="col">Ciudad</th>
      <th scope="col">País</th>
      <th> </th>
      <th> </th>
      <th> </th>
    </tr>
  </thead>
  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td>
        <%= cliente.nombre %>
        <%= cliente.apellido_paterno %>
        <%= cliente.apellido_materno %>
        </td>
        <td><%= cliente.correo %></td>
        <td><%= cliente.telefono %></td>
        <td><%= cliente.calle %></td>
        <td><%= cliente.colonia %></td>
        <td><%= cliente.codigo_postal %></td>
        <td><%= cliente.ciudad %></td>
        <td><%= cliente.pais %></td>
        <td>  <%= link_to "Mostrar", cliente, class: "btn btn-info" %></td>
        <td>  <%= link_to "Editar", edit_cliente_path(cliente), class: "btn btn-warning" %></td>
        <td>  <%= button_to "Eliminar", cliente, method: :delete, form: { data: { turbo_confirm: '¿Estas seguro?' } }, class: "btn btn-danger" %></td>
          
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Nuevo cliente", new_cliente_path, class: "btn btn-secondary btn-lg" %>
