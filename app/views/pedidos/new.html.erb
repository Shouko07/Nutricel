<section class="py-5 mt-5">

<div class="row">
    <div class="col-md-6">
        <section class="py-5">
            <h1 class="display-6 fw-bold pb-md-4">Nuevo pedido</h1>
            </br>
            <%= render "form", pedido: @pedido %>
            <br>
            <div>
                <%= link_to "Regresar", productos_path, class: "btn btn-dark" %>
            </div>
        </section>
    </div>
    <div class="col-md-6">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 col-sm-6 col-md-6">
                    </br>
                        <h1 class="display-6 fw-bold pb-md-4">Carrito de compras</h1>
                    </div>
                    <div class="col-12 col-sm-6 col-md-6 text-end" style="margin-bottom: 30px;">
                    </div>
                </div>
                <div id="TableSorterCard" class="card">
                    <div class="row">
                        <div class="col-12">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th scope="col">Cantidad ordenada</th>
                                            <th scope="col">Nombre del producto</th>
                                            <th scope="col">Cantidad a pagar</th>
                                            <th scope="col">ID del usuario</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% @pedidos.each do |pedido| %>
                                            <% if pedido.usuario == current_usuario %>
                                                <tr>
                                                    <td><%= pedido.cantidad_ordenada %></td>
                                                    <td><%= pedido.producto.nombre %></td>
                                                    <% cantidad_ordenada = pedido.cantidad_ordenada %>
                                                    <% precio_producto = pedido.producto.precio %>
                                                    <% total = cantidad_ordenada * precio_producto %>
                                                    <td><%= total %></td> 
                                                    <td><%= pedido.usuario_id %></td>
                                                </tr>
                                            <% end %>
                                        <% end %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>
</section>
