<h1>Lista de pedidos</h1>

<table class="table table-striped table-hover ">
  <thead class="table-dark">
    <tr>
      <th scope="col">Cantidad ordenada</th>
      <th scope="col">Fecha Inicial</th>
      <th scope="col">Fecha de entrega</th>
      <th scope="col">ID del usuario</th>
      <th> </th>
      <th> </th>
    </tr>
  </thead>
  <tbody>
    <% @pedidos.each do |pedido| %>
      <% if pedido.usuario == current_usuario %>
      <tr>
        <td><%= pedido.cantidad_ordenada %></td>
        <td><%= pedido.fecha_inicial %></td>
        <td><%= pedido.fecha_entrega %></td>
        <td><%= pedido.usuario_id %></td>
        <td>  <%= link_to "Mostrar", pedido, class: "btn btn-dark" %></td>
        <td>  <%= button_to "Eliminar", pedido, method: :delete, form: { data: { turbo_confirm: 'Â¿Estas seguro?' } }, class: "btn btn-danger" %></td>
          
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to "Nuevo pedido", new_pedido_path, class: "btn btn-secondary btn-lg" %>
