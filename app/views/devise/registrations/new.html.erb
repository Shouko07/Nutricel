<section class="py-4 py-md-5 my-5">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="container py-md-5">
            <div class="row">
                <div class="col-md-6 text-center">
                    <%= image_tag("illustrations/register.svg", class: "img-fluid w-100") %>
                </div>
                <div class="col-md-6 col-xl-3 text-center text-md-start">
                    <h2 class="display-6 fw-bold mb-5"><span class="underline pb-1"><strong>Registrate</strong></span></h2>
                    <div class="mb-3">
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Correo electronico"  %>
                    </div>
                    <div class="mb-3">
                        <% if @minimum_password_length %>
                            <em>(Minimo <%=  @minimum_password_length %> caracteres)</em>
                        <% end %><br />
                        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Crea una contraseña"  %>
                    </div>
                    <div class="mb-3">
                        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirma la contraseña"  %>
                    </div>
                    <div class="mb-3">
                        <%= f.text_field :nombre, class: "form-control", placeholder: "Nombre" %>
                    </div>
                    <div class="mb-3">
                        <%= f.text_field :apellido_paterno, class: "form-control", placeholder: "Apellido paterno" %>
                    </div>
                    <div class="mb-3">
                        <%= f.text_field :apellido_materno, class: "form-control", placeholder: "Apeliido materno"  %>
                    </div>
                    <div class="mb-3">
                        <%= f.submit "Crear cuenta", class: "btn btn-primary shadow" %>
                    </div>
                    <p class="text-muted">¿Ya tienes una cuenta?</br><%= render "devise/shared/links" %></p>
                </div>
                <div class="col-md-6 col-xl-3 text-center text-md-start">
                <h2 class="display-6 fw-bold mb-5 "style="visibility: hidden;"><span class="underline pb-1"><strong>Registrate</strong></span></h2>

                    <div class="mb-3">
                        <%= f.text_field :telefono, class: "form-control", placeholder: "Telefono"  %>
                    </div>
                    <div class="mb-3">
                        <%= f.text_field :calle, class: "form-control", placeholder: "Calle"  %>
                    </div>
                    <div class="mb-3">
                        <%= f.text_field :colonia, class: "form-control", placeholder: "Colonia"  %>
                    </div>
                    <div class="mb-3">
                        <%= f.text_field :codigo_postal, class: "form-control", placeholder: "Codigo postal"  %>
                    </div>
                    <div class="mb-3">
                        <%= f.text_field :ciudad, class: "form-control", placeholder: "Ciudad"  %>
                    </div>
                    <div class="mb-3">
                        <%= f.text_field :pais, class: "form-control", placeholder: "Pais"  %>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</section>
