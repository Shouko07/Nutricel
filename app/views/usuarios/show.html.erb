<section class="py-5">
<div class="p-5 mb-4 bg-light rounded-3">
      <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">
        <%= @usuario.nombre %>
        <%= @usuario.apellido_paterno %>
        <%= @usuario.apellido_materno %>
        </h1>
        <p class="col-md-8 fs-4"><strong>Correo:</strong> <%= @usuario.email %></p>
        <p class="col-md-8 fs-4"><strong>Teléfono:</strong> <%= @usuario.telefono %></p>
        <p class="col-md-8 fs-4"><strong>Calle:</strong> <%= @usuario.calle %></p>
        <p class="col-md-8 fs-4"><strong>Colonia:</strong> <%= @usuario.colonia %></p>
        <p class="col-md-8 fs-4"><strong>Código Postal:</strong> <%= @usuario.codigo_postal %></p>
        <p class="col-md-8 fs-4"><strong>Ciudad:</strong> <%= @usuario.ciudad %></p>
        <p class="col-md-8 fs-4"><strong>País:</strong> <%= @usuario.pais %></p>
        
        <%= link_to "Editar este cliente", edit_usuario_path(@usuario), class: "btn btn-dark btn-lg"%>
        <%= link_to "Editar", edit_usuario_registration_path(usuario), class: "btn btn-secondary" %>
        </div>
    </div>
    <div class="cliente-info">


  </div>
  </section>





