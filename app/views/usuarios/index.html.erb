<section class="py-5 mt-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-sm-6 col-md-6">
            <h1 class="display-6 fw-bold pb-md-4">Lista de clientes</h1>
            </div>
        </div>
        <div id="TableSorterCard" class="card">
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table id="ipi-table" class="table table-striped table tablesorter">
                            <thead class="table-dark">
                                <tr>
                                    <th class="text-center">Nombre</th>
                                    <th class="text-center">Correo</th>
                                    <th class="text-center">Teléfono</th>
                                    <th class="text-center">Calle</th>
                                    <th class="text-center">Colonia</th>
                                    <th class="text-center">Código Postal</th>
                                    <th class="text-center">Ciudad</th>
                                    <th class="text-center">País</th>
                                    <th class="text-center filter-false sorter-false">Acciones</th>
                                </tr>
                            </thead>
                            <tbody class="text-center">
                                <tr>
                                <% @usuarios.each do |usuario| %>
                                  <tr>
                                    <td>
                                    <%= usuario.nombre %>
                                    <%= usuario.apellido_paterno %>
                                    <%= usuario.apellido_materno %>
                                    </td>
                                    <td><%= usuario.email %></td>
                                    <td><%= usuario.telefono %></td>
                                    <td><%= usuario.calle %></td>
                                    <td><%= usuario.colonia %></td>
                                    <td><%= usuario.codigo_postal %></td>
                                    <td><%= usuario.ciudad %></td>
                                    <td><%= usuario.pais %></td>
                                    
                                    
                                    <td class="text-center " style="max-height: 60px;height: 60px;">
                                    <%= link_to "Mostrar", usuario, class: "btn btn-dark" %>
                                    <%= link_to "Editar", edit_usuario_registration_path(usuario), class: "btn btn-secondary" %>
                                    <%= button_to "Eliminar", usuario, method: :delete, form: { data: { turbo_confirm: '¿Estas seguro?' } }, class: "btn btn-danger" %>
                                    </td>
                                  </tr>
                                <% end %>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>